@{
  Layout = "_Layout";
}
@using AnimalShelter.Models;
@model List<AnimalShelter.Models.Animal>;
<h1>Sort list of animals not  by alphabetical order</h1>
@if(Model.Count==0)
{
    <h3>There is no animals in our list.</h3>
}
<ul> 
  @foreach(Animal animals in Model)
  {
      <li>@animals.AnimalType</li>
  }
</ul>

<p>@Html.ActionLink("Add new animal", "Create")</p>
<p>@Html.ActionLink("Return Home Page", "Index","Home")</p>